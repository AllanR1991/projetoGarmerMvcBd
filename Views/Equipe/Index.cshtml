@model Equipe

<link rel="stylesheet" href="~/css/equipes.css">

@{
    //se não setar valor por padrao vem como home.
    ViewData["Title"] = "Equipe";
}

<!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">
            
            
            <form method="post" action="@Url.Action("Cadastar")" class="frm-cad-equipe" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
                <input name="Nome" class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" required>
                
                <div>
    <label onclick="updateImageDisplay()" class="foto" for="image_uploads">Escolha imagem da equipe (PNG, JPG)</label>
    <input class="inputFile" type="file" id="image_uploads" nome="Imagem" accept=".jpg, .jpeg, .png"/>
  </div>
  <div class="preview">
    <p>Não há nenhum imagem selecionado.</p>
  </div>

                <button type = "submit">Cadastro</button>
                
                




                
                <!-- <select class="equipeid" id="equipeid">
                    <option value="">Selecione uma Equipe</option>
                    <option value="x">Equipe X</option>
                    <option value="y">Equipe Y</option>
                </select> -->
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Imagem</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @{
        int cont=1;
        foreach (Equipe equipe in ViewBag.Equipe)
        {
            <tr>
                <td>@cont</td>
                <td>@equipe.Name</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Name" width="50px"></td>
                @* asp-area="" => igual descrição de imagem *@
                
                <td><a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a> / <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a></td>
            </tr>
            cont++;
        }
        }
                </tbody>
            </table>
        </section>
    </main>


<script src="~/js/inputFile.js">

</script>

