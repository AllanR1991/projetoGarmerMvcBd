@model Equipe

@{
    //se n√£o setar valor por padrao vem como home.
    ViewData["Title"] = "Equipe";
}

<h1>Tela de Equipes</h1>

<!-- 
    post -> enviar
    get -> obter



Importante ter o enctype pra quando trabalhamos com arquivos 
-->
<form method="post" action='@Url.Action("Cadastar")' enctype="multipart/form-data">
    <label for="inputName">Nome</label>
    <input type="text" name="Nome" id="inputName">
    <label for="inputImagem">Imagem</label>
    <input type="file" name="Imagem" id="inputImagem">

    <button type = "submit">Cadastrar</button>
</form>


<table class="table table-striped table-reponsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>

    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Name</td>
                <td>@equipe.Imagem</td>
            </tr>

        }
    </tbody>

</table>