@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<!-- MAIN -->
    <main>

        <section class="container-grid cadastro-equipes">


            <form method="post" action="@Url.Action("Cadastrar")" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

            @* <input class="campo-entrada" type="number" id="id-equipe" placeholder="Digite o Id da sua equipe:"> *@
            @* <input class="campo-entrada" type="text" id="nome-equipe" placeholder="Digite o nome da sua equipe:" required> *@

                <select name="IdEquipe" class="campo-entrada" id="equipe-select">
                    <option value="">--Escolha uma opção--</option>
                @{
                    foreach (Equipe equipe in ViewBag.Equipe)
                    {
                                                                <option value="@equipe.IdEquipe">@equipe.Name</option>
                    }
                }
                </select>

                <input name="Nome" class="campo-entrada" type="text" id="nome-jogador" placeholder="Digite o nome do Jogador:" required>
                <input name="Email" class="campo-entrada" type="email" id="email-jogador" placeholder="Digite o Email do Jogador:" required>
                <input name="Senha" class="campo-entrada" type="password" id="senha" placeholder="Digite a Senha:">
                <button type="submit">Cadastrar</button>
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table class="table table-striped table-reponsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @{
            foreach (Jogador jogador in ViewBag.Jogador)
            {
                <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td> <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="Imagem da equipe @jogador.Equipe.Name"
                            width="50px">
                    </td>
                    <td><a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/trash.png" alt=""></a> / <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Alterar</a></td>
                </tr>
            }
        }
                </tbody>
            </table>
        </section>
    </main>


